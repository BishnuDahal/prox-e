{
    "name": "prox-e",
    "version": "1.0.0",
    "main": "index.js",
    "description": "Simple REST APIs to extend CST's core functionalities",
    "author": "Risav Karna <risavkarna@gmail.com>",
    "license": "GPL-3.0-or-later",
    "repository": {
        "type": "git",
        "url": "github.com/covidsimteam/prox-e.git"
    },
    "scripts": {
        "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
        "build": "tsoa spec-and-routes && tsc",
        "start": "node build/src/server.js",
        "start-hoodie": "hoodie",
        "commit": "npx git-cz"
    },
    "dependencies": {
        "@cloudant/couchbackup": "^2.5.2",
        "@hoodie/client": "^10.2.0",
        "@liftr/tscov": "^1.4.7",
        "@octokit/rest": "^18.0.3",
        "axios": "^0.19.2",
        "body-parser": "^1.19.0",
        "bunyan": "^1.8.14",
        "bunyan-cloudant": "^1.0.2",
        "cors": "^2.8.5",
        "couchexport": "0.0.2",
        "couchimport": "^1.5.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "hammerjs": "^2.0.8",
        "hoodie": "^28.2.10",
        "jsonwebtoken": "^8.5.1",
        "pouchdb-browser": "^7.2.2",
        "swagger-ui-express": "^4.1.4",
        "tsoa": "^3.2.1"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/prompt"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.1",
        "@commitlint/config-conventional": "^9.1.1",
        "@commitlint/prompt": "^9.1.1",
        "@types/axios": "^0.14.0",
        "@types/body-parser": "^1.19.0",
        "@types/bunyan": "^1.8.6",
        "@types/cors": "^2.8.7",
        "@types/express": "^4.17.7",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/node": "^14.0.27",
        "@types/swagger-ui-express": "^4.1.2",
        "commitizen": "4.1.2",
        "concurrently": "^5.2.0",
        "nodemon": "^2.0.4",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    },
    "hoodie": {
        "address": "127.0.0.1",
        "port": 8080,
        "data": ".hoodie",
        "public": "public",
        "dbUrl": "",
        "dbAdapter": "pouchdb-adapter-fs",
        "inMemory": false,
        "loglevel": "warn",
        "url": "",
        "adminPassword": "",
        "name": "my-hoodie-app"
    }
